<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wjs.collectioncode">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 视频录制 需要这两个权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".CollectionCodeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.snaphelper.SnapHelperActivity" />
        <activity android:name=".widget.dynamicimageview.DynamicImageViewActivity" />
        <activity android:name=".behavior.BottomSheetBehaviorActivity" />
        <activity android:name=".behavior.CustomBehaviorActivity" />
        <activity android:name=".behavior.AvatarImageBehaviorActivity" />
        <activity android:name=".tablayout.TabLayoutTopActivity" />
        <activity android:name=".appbarLayout.AppBarLayoutActivity" />
        <activity android:name=".recyclerview.dragswipe.DragSwipeActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name=".recyclerview.gallery.shop.ShopActivity" />
        <activity android:name=".recyclerview.gallery.weather.WeatherActivity" />
        <activity android:name=".widget.dynamicimageview.DynamicImageView2Activity"></activity>
    </application>

</manifest>